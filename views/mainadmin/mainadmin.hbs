<div class="container-fluid justify-content-center align-items-center">

    <h3 class="align-items-center text-center mt-4">Admin Page</h3>
    <p class="align-items-center text-center mt-2" style="color: red;">{{ error }}</p>




    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">

                    <h5 class="modal-title" id="exampleModalLabel">Add New User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action='/mainadmin/adduser' method="post" enctype="multipart/form-data">
                        <div class="form-group mb-1">
                            <label>User ID :</label>
                            <input type="name" class="form-control" name="username" placeholder="User ID" required>
                        </div>
                        <div class="form-group mb-1">
                            <label>Email :</label>
                            <input type="email" class="form-control" name="email" placeholder="email"
                                required></textarea>
                        </div>
                        <div class="form-group mb-1">
                            <label>Name of User :</label>
                            <input type="name" class="form-control" name="name" placeholder="Name" required>
                        </div>
                        <div class="form-group mb-2">
                            <label>DOB :</label>
                            <input type="date" class="form-control" name="dob" placeholder="Date" required>
                        </div>
                        <div class="form-group mb-2">
                            <label>Gender :</label><br>
                            <input type="radio" name="gender" value="male" required>
                            <label>Male</label>
                            <input type="radio" name="gender" value="female">
                            <label>Female</label>
                        </div>
                        <div class="form-group mb-1">
                            <label>Address :</label>
                            <input type="textfield" class="form-control" name="address" placeholder="Address" required>
                        </div>
                        <div class="form-group">
                            <label>Password :</label>
                            <input type="password" class="form-control" name="password" placeholder="password" required>
                        </div>
                        <div class="form-group mb-2">
                            <label>User Type :</label><br>
                            <input type="radio" name="role" value="user" required>
                            <label>User</label>
                            <input type="radio" name="role" value="admin">
                            <label>Admin</label>
                        </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

                </form>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center align-items-center">     
        <div class="col-12 col-sm-12">
            <div class="table-responsive ">
                <table class="table " style="width:85%;">
                    <thead>
                        <tr class="table-primary">
                            <th scope="col">Role</th>
                            <th scope="col">Name</th>
                            <th scope="col">UseID</th>
                            <th scope="col">email</th>
                            <th scope="col" class="d-none d-sm-table-cell">Password</th>
                            <th scope="col" class="d-none d-sm-table-cell">DOB</th>

                            <th scope="col" class="d-none d-sm-table-cell">gender</th>
                            <th scope="col" class="d-none d-sm-table-cell">address</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        {{#each items}}
                        <tr>
                            
                            <td>{{this.role}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.username}}</td>
                            <td>{{this.email}}</td>
                            <td class="d-none d-sm-table-cell">********</td>
                            <td class="d-none d-sm-table-cell">{{this.dob}}</td>
                            <td class="d-none d-sm-table-cell">{{this.gender}}</td>
                            <td class="d-none d-sm-table-cell">{{this.address}}</td>
                            <td><a href="/mainadmin/edit/{{this._id}}" class="btn btn-primary">Edit</a></td>
                            <td><a href="/mainadmin/delete/{{this._id}}" class="btn btn-danger"
                                    onclick="return confirm('Are you want to Delete ?')">Delete</a>
                            </td>
                        </tr>
                        {{/each}}
                        
                    </tbody>
                </table>
                <h3 class="align-items-center text-center mt-2" style="color: red;">{{ msg }}</h3>
            </div>
        </div>
    </div>
</div>
