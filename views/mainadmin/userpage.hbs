<div class="container-fluid mt-5 mb-5">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-sm-12 col-md-6 col-lg-5">


            <h2 class="mb-4">Edit Users</h2>

            <form action="/mainadmin/edit/{{data._id}}" method="POST">
                <div class="form-group mb-1">
                    <label>User ID :</label>
                    <input type="name" value="{{data.username}}" class="form-control" name="username" placeholder="User ID"
                        readonly>
                </div>
                <div class="form-group mb-1">
                    <label>Email :</label>
                    <input type="email" value="{{data.email}}" class="form-control" name="email" placeholder="email"
                        readonly>
                </div>
                <div class="form-group mb-1">
                    <label>Name of User :</label>
                    <input type="name" value="{{data.name}}" class="form-control" name="name" placeholder="Name"
                        required>
                </div>
                <div class="form-group mb-2">
                    <label>DOB :</label>
                    <input type="name" value="{{data.dob}}" class="form-control" name="dob" placeholder="Date" required>
                </div>
                <div class="form-group mb-2">
                    <label>Gender :</label><br>
                    <input type="radio" name="gender" value="male" {{#if flag}}checked{{/if}}>
                    <label>Male</label>
                    <input type="radio" name="gender" value="female" {{#unless flag}}checked{{/unless}} >
                    <label>Female</label>
                </div>


                <div class="form-group mb-1">
                    <label>Address :</label>
                    <input type="textfield" value="{{data.address}}" class="form-control" name="address"
                        placeholder="Address" required>
                </div>
                <div class="form-group">
                    <label>Password :</label>
                    <input type="password" class="form-control" name="password" placeholder="******" readonly>
                </div>
                <div class="form-group mb-2">
                    <label>User Type :</label><br>
                    <input type="radio" name="role" value="user" {{#if user}}checked{{/if}}>
                    <label>User</label>
                    <input type="radio" name="role" value="admin" {{#unless user}}checked{{/unless}}>
                    <label>Admin</label>
                </div>
                <div class="d-flex justify-content-end">
                        <a href="/mainadmin" class="btn btn-primary me-1">Back</a>
                        <button type="submit" class="btn btn-primary">Edit User</button>
                    </div>
            </form>
        </div>
    </div>
</div>